<% layout('layouts/boilerplate.ejs') %>
<h1>All Campgrounds</h1>
<% for(camp of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
          <%= camp.title %>
        </h5>
        <p class="card-text">
          <%= camp.description %>
        </p>
        <p class="card-text">
          <small class="text-muted">
            <%= camp.location%>
          </small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
      </div>
    </div>
  </div>
</div>
<% } %>